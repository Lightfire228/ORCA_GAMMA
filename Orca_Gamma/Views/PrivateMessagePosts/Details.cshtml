@model IEnumerable<Orca_Gamma.Models.DatabaseModels.PrivateMessagePost>

@{
    ViewBag.Title = "Details";
}

<h2>@ViewBag.SubjectOfMessage</h2>

<table class="table">
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                @if (item.IsDeleted == false)
                {
                    @Html.DisplayFor(modelItem => item.Body)
                }
                else
                {
                    @ViewBag.deleted
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Reply", "Reply", new { id = item.Id }) | @Html.ActionLink("Delete", "ReplyDelete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Back to Inbox", "Index")
</p>
