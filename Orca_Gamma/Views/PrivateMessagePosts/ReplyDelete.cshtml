    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value=@(Model.IsDeleted ? "Restore" : "Delete") class="btn btn-default" onclick="DisableButton(this);" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
