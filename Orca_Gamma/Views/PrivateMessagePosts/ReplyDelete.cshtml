    ViewBag.Title = "ReplyDelete";
}

<h2>@ViewBag.BigHeading</h2>

<h3>@ViewBag.Heading</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Body)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Body)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
