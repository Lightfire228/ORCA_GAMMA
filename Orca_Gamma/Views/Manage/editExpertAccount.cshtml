@model Orca_Gamma.Models.EditExpertViewModel

@{
    ViewBag.Title = "Edit Catagory";
}

<h2>Edit Catagory</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h4>Selected Catagory: @Model.Expert.Catagory.Name</h4>

    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Expert.Id)

        <div class="form-group">
            @*label here*@
            <div class="col-md-10">
                @Html.LabelFor(model => model.SelectedCatagory)
                @Html.DropDownListFor(model => model.SelectedCatagory, new SelectList(Model.Categories,"Id", "Name"))
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
