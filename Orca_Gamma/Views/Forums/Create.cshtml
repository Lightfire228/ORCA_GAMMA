@model Orca_Gamma.Models.ViewModels.CreatePostViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create Post</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            <div class="col-md-10">

                @if (ViewBag.subjectBlank != null) {
                    <div class="text-danger">
                        @ViewBag.subjectBlank
                    </div>
                }

                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", placeholder ="Title of topic" } })
                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstPost, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter keyword to help narrow searches" } })
                @Html.ValidationMessageFor(model => model.FirstPost, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(model => model.Body, new { @class = "col-md-2 control-label" })*@
            <div class="col-md-10">

                @if (ViewBag.bodyBlank != null) {
                    <div class="text-danger">
                        @ViewBag.bodyBlank
                    </div>
                }

                @Html.TextAreaFor(model => model.Body, new { @class = "form-control", placeholder = "Description" })
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
            </div>
        </div>
        <script>
            function DisableButton(b)
            {
                b.disabled = true;
                b.value = 'Submitting';
                b.form.submit();
             }
        </script>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" onclick="DisableButton(this);"/>
            </div>
        </div>
        </div>
        }
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
