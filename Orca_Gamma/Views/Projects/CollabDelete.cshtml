@model Orca_Gamma.Models.DatabaseModels.Collaborator

@{
    ViewBag.Title = "CollabDelete";
}

<h2>CollabDelete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Collaborator</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Details", "Details", new { id = Model.ProjectId })
        </div>
    }
</div>
