@model Orca_Gamma.Models.ProjectViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Project Details</h2>

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Project Lead
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName) @Html.ActionLink("(Profile)", "UserProfile", "Home", new { Model.User.Id }, null)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateStarted)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateStarted)
        </dd>
    </dl>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayFor(model => model.Name) Collaborators
        </th>
    </tr>

    @foreach (var item in Model.CollaboratorList)
    {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
            </th>
            <th>
                @Html.ActionLink("Profile", "UserProfile", "Home", new { item.Id }, null)
            </th>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Back to Projects", "Index") |

    @if (@ViewBag.currentID == Model.User.Id)
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
    }
   | @if (@ViewBag.currentID == Model.User.Id)
    {
        @Html.ActionLink("Delete", "Delete", new { id = Model.Id })
    }
   | @if (@ViewBag.currentID == Model.User.Id)
    {
        @Html.ActionLink("Manage Collaborators", "Collab", new { id = Model.Id }) 
    }
   | @if (@ViewBag.currentID == Model.User.Id)
    {
        @Html.ActionLink("Transfer Project Lead Role", "LeadTransfer", new { projectId = Model.Id })
    }
</p>
