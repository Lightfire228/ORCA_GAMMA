<body>

  <div>
    <%- include partials/head.ejs %>
  </div>
  <div class="header-blue">
    <div class="container" style="padding:15px 15px;padding-top:30px;padding-bottom:200px;">
      <%- include partials/breadcrumb.ejs%>
      <div>
        <h1 style="color:#ffffff;margin-bottom:20px;">Account Information</h1>
      </div>
      <div>

          <div class="card-group">
            <div class="card">
              <div class="card-header">
                <h5 class="mb-0"></h5>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Contract Signed</th>
                      </tr>
                    </thead>
                    <tbody>
                      <form method="post" formaction="/delete">

                        <tr>
                          <td>
                            <%= user.local.firstName %>
                              <%= user.local.lastName %>
                          </td>
                          <td>
                            <%= user.local.email %>
                          </td>
                          <td>
                            <%= user.local.street %>,
                              <%= user.local.city %>,
                                <%= user.local.state %>
                                  <%= user.local.zip %>
                          </td>
                          <td>
                            <%= user.local.phone %>
                          </td>
                          <td>
                            <% if( user.local.contract ){ %>
                              Yes
                              <% } else{ %>
                                No
                                <% } %>
                          </td>

                        </tr>
                    </tbody>
                  </table>

                  <a href="/editUser/<%=user.id%>"><button class="btn btn-primary" type="button" style="background-color:rgb(4,148,74);font-family:'Source Sans Pro', sans-serif;font-size:16px;"> Edit Your Info </button></a>

                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
  <script src="assets/js/jquery.min.js"></script>
  <script src="assets/bootstrap/js/bootstrap.min.js"></script>
  <script src="assets/js/bs-animation.js"></script>
  <div>
      <% include partials/footer.ejs %>
  </div>
</body>

</html>
